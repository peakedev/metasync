meta {
  name: Get Streams Summary With Filters
  type: http
  seq: 11
}

get {
  url: {{baseUrl}}/stream/summary?model={{model}}&status=completed
  body: none
  auth: none
}

headers {
  Content-Type: application/json
  client_id: {{clientId}}
  client_api_key: {{clientApiKey}}
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response is an object", function() {
    expect(res.getBody()).to.be.an('object');
  });
  
  test("Response has all status counts", function() {
    const summary = res.getBody();
    expect(summary).to.have.property('streaming');
    expect(summary).to.have.property('completed');
    expect(summary).to.have.property('error');
    expect(summary).to.have.property('total');
  });
  
  test("Status counts are numbers", function() {
    const summary = res.getBody();
    expect(summary.streaming).to.be.a('number');
    expect(summary.completed).to.be.a('number');
    expect(summary.error).to.be.a('number');
    expect(summary.total).to.be.a('number');
  });
  
  test("Total equals sum of all statuses", function() {
    const summary = res.getBody();
    const sum = summary.streaming + summary.completed + summary.error;
    expect(summary.total).to.equal(sum);
  });
  
  test("All counts are non-negative", function() {
    const summary = res.getBody();
    expect(summary.streaming).to.be.at.least(0);
    expect(summary.completed).to.be.at.least(0);
    expect(summary.error).to.be.at.least(0);
    expect(summary.total).to.be.at.least(0);
  });
  
  test("Response has processingMetrics with aggregated data", function() {
    const summary = res.getBody();
    // If there are completed streams matching the filter, check processingMetrics
    if (summary.completed > 0) {
      expect(summary).to.have.property('processingMetrics');
      if (summary.processingMetrics !== null) {
        expect(summary.processingMetrics).to.be.an('object');
        
        // Check token fields (always present)
        expect(summary.processingMetrics).to.have.property('inputTokens');
        expect(summary.processingMetrics.inputTokens).to.be.a('number');
        expect(summary.processingMetrics.inputTokens).to.be.greaterThan(0);
        
        expect(summary.processingMetrics).to.have.property('outputTokens');
        expect(summary.processingMetrics.outputTokens).to.be.a('number');
        expect(summary.processingMetrics.outputTokens).to.be.greaterThan(0);
        
        expect(summary.processingMetrics).to.have.property('totalTokens');
        expect(summary.processingMetrics.totalTokens).to.be.a('number');
        expect(summary.processingMetrics.totalTokens).to.be.greaterThan(0);
        expect(summary.processingMetrics.totalTokens).to.equal(
          summary.processingMetrics.inputTokens + summary.processingMetrics.outputTokens
        );
        
        expect(summary.processingMetrics).to.have.property('duration');
        expect(summary.processingMetrics.duration).to.be.a('number');
        expect(summary.processingMetrics.duration).to.be.greaterThan(0);
        
        // Cost fields should always be present now
        expect(summary.processingMetrics).to.have.property('inputCost');
        expect(summary.processingMetrics).to.have.property('outputCost');
        expect(summary.processingMetrics).to.have.property('totalCost');
        expect(summary.processingMetrics).to.have.property('currency');
        
        // If currency is valid (not null or "multiple currencies"), verify cost amounts
        if (summary.processingMetrics.currency && summary.processingMetrics.currency !== 'multiple currencies') {
          expect(summary.processingMetrics.inputCost).to.be.a('number');
          expect(summary.processingMetrics.inputCost).to.be.greaterThan(0);
          
          expect(summary.processingMetrics.outputCost).to.be.a('number');
          expect(summary.processingMetrics.outputCost).to.be.greaterThan(0);
          
          expect(summary.processingMetrics.totalCost).to.be.a('number');
          expect(summary.processingMetrics.totalCost).to.be.greaterThan(0);
          expect(summary.processingMetrics.totalCost).to.equal(
            summary.processingMetrics.inputCost + summary.processingMetrics.outputCost
          );
          
          expect(summary.processingMetrics.currency).to.be.a('string');
          expect(summary.processingMetrics.currency.length).to.be.greaterThan(0);
        }
      }
    }
  });
}

