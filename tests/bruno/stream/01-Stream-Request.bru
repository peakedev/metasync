meta {
  name: Stream Request
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/stream
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  client_id: {{clientId}}
  client_api_key: {{clientApiKey}}
}

body:json {
  {
    "userPrompt": "Tell me a short story that includes lorem ipsum",
    "model": "{{model}}",
    "temperature": 0.7
  }
}

script:post-response {
  // Store streamId for the next test to verify metrics
  const streamId = res.getHeader('x-stream-id') || res.getHeader('X-Stream-Id');
  if (streamId) {
    bru.setVar("streamId", streamId);
  }
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response has X-Stream-Id header", function() {
    const streamId = res.getHeader('x-stream-id') || res.getHeader('X-Stream-Id');
    expect(streamId).to.be.a('string');
    expect(streamId.length).to.be.greaterThan(0);
    bru.setVar("streamId", streamId);
  });
  
  test("Response body is text", function() {
    expect(res.getBody()).to.be.a('string');
    expect(res.getBody().length).to.be.greaterThan(0);
  });
  
  test("Response contains lorem ipsum text", function() {
    const body = res.getBody();
    expect(body).to.include('Lorem ipsum');
  });
}
