meta {
  name: Create Client
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/clients
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  admin_api_key: {{adminApiKey}}
}

body:json {
  {
    "name": "Test Client"
  }
}

vars:post-response {
  createdClientId: res.getBody().clientId
  createdApiKey: res.getBody().api_key
}

tests {
  test("Status code is 201", function() {
    expect(res.getStatus()).to.equal(201);
  });
  
  test("Response is an object", function() {
    expect(res.getBody()).to.be.an('object');
  });
  
  test("Created client has correct properties", function() {
    const client = res.getBody();
    expect(client.name).to.equal('Test Client');
    expect(client.enabled).to.equal(true);
    expect(client).to.have.property('clientId');
    expect(client).to.have.property('api_key');
    expect(client.api_key).to.have.lengthOf(64);
    bru.setVar("createdClientId", res.getBody().clientId);
      bru.setVar("createdClientApiKey", res.getBody().api_key);
  });
  
  test("Client has _metadata with createdAt timestamp", function() {
    const client = res.getBody();
    expect(client).to.have.property('_metadata');
    expect(client._metadata).to.have.property('createdAt');
  });
}


