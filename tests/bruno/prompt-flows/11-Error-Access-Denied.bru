meta {
  name: Get Public Flow As Client
  type: http
  seq: 11
}

get {
  url: {{baseUrl}}/prompt-flows/{{createdPublicFlowId}}
  body: none
  auth: none
}

headers {
  Content-Type: application/json
  client_id: {{clientId}}
  client_api_key: {{clientApiKey}}
}

tests {
  test("Status code is 200 for public flow", function() {
    // Public flows should be accessible to all clients
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response contains public flow", function() {
    const flow = res.getBody();
    expect(flow.flowId).to.equal(bru.getVar("createdPublicFlowId"));
    expect(flow.isPublic).to.equal(true);
  });
}

