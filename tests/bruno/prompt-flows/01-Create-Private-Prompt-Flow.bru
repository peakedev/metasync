meta {
  name: Create Private Prompt Flow
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/prompt-flows
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  clientId: {{clientId}}
  client_api_key: {{clientApiKey}}
}

body:json {
  {
    "name": "test-flow",
    "promptIds": ["507f1f77bcf86cd799439012", "507f1f77bcf86cd799439013"],
    "isPublic": false
  }
}

tests {
  test("Status code is 201", function() {
    expect(res.getStatus()).to.equal(201);
  });
  
  test("Response is an object", function() {
    expect(res.getBody()).to.be.an('object');
  });
  
  test("Created prompt flow has correct properties", function() {
    const flow = res.getBody();
    expect(flow.name).to.equal('test-flow');
    expect(flow.promptIds).to.be.an('array');
    expect(flow.promptIds).to.have.lengthOf(2);
    expect(flow.isPublic).to.equal(false);
    expect(flow).to.have.property('flowId');
    bru.setVar("createdFlowId", flow.flowId);
    expect(flow.clientId).to.deep.equal(bru.getEnvVar("clientId"));
  });
  
  test("Prompt flow has created_at timestamp", function() {
    const flow = res.getBody();
    expect(flow).to.have.property('created_at');
  });
}

