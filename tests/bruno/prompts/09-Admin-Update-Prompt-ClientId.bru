meta {
  name: Admin Update Prompt - Remove Client ID and Make Public
  type: http
  seq: 20.5
}

patch {
  url: {{baseUrl}}/prompts/{{createdPromptId}}
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  admin_api_key: {{adminApiKey}}
}

body:json {
  {
    "clientId": null,
    "isPublic": true
  }
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response contains null clientId", function() {
    const prompt = res.getBody();
    expect(prompt.clientId).to.be.null;
  });
  
  test("Response contains updated isPublic", function() {
    const prompt = res.getBody();
    expect(prompt.isPublic).to.equal(true);
  });
  
  test("Prompt ID is preserved", function() {
    const prompt = res.getBody();
    expect(prompt.promptId).to.equal(bru.getVar("createdPromptId"));
  });
  
  test("Other fields are preserved", function() {
    const prompt = res.getBody();
    expect(prompt.name).to.equal('test-prompt');
    expect(prompt.type).to.equal('system');
  });
  
  test("Prompt has updated_at timestamp", function() {
    const prompt = res.getBody();
    expect(prompt).to.have.property('updated_at');
    expect(prompt.updated_at).to.not.be.null;
  });
}


