}

post {
  url: {{baseUrl}}/prompts
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  clientId: {{clientId}}
  client_api_key: {{clientApiKey}}
}

body:json {
  {
    "name": "auto-version-prompt",
    "type": "user",
    "status": "DRAFT",
    "prompt": "This prompt will get auto-incremented version.",
    "isPublic": false
  }
}

tests {
  test("Status code is 201", function() {
    expect(res.getStatus()).to.equal(201);
  });
  
  test("Version is auto-incremented to 1", function() {
    const prompt = res.getBody();
    expect(prompt.version).to.equal(1);
    bru.setVar("createdAutoVersionPromptId", prompt.promptId);
  });
  
