meta {
  name: Update Job Status - Error to Pending
  type: http
  seq: 9
}

patch {
  url: {{baseUrl}}/jobs/{{createdJobId}}
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  client_id: {{clientId}}
  client_api_key: {{clientApiKey}}
}

body:json {
  {
    "status": "PENDING"
  }
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Job status is updated to PENDING", function() {
    const job = res.getBody();
    expect(job.status).to.equal('PENDING');
  });
}
