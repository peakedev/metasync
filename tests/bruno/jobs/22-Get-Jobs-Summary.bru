meta {
  name: Get Jobs Summary
  type: http
  seq: 28
}

get {
  url: {{baseUrl}}/jobs/summary
  body: none
  auth: none
}

headers {
  Content-Type: application/json
  client_id: {{clientId}}
  client_api_key: {{clientApiKey}}
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response is an object", function() {
    expect(res.getBody()).to.be.an('object');
  });
  
  test("Response has all status counts", function() {
    const summary = res.getBody();
    expect(summary).to.have.property('PENDING');
    expect(summary).to.have.property('PROCESSING');
    expect(summary).to.have.property('PROCESSED');
    expect(summary).to.have.property('ERROR');
    expect(summary).to.have.property('CANCELED');
    expect(summary).to.have.property('total');
  });
  
  test("Status counts are numbers", function() {
    const summary = res.getBody();
    expect(summary.PENDING).to.be.a('number');
    expect(summary.PROCESSING).to.be.a('number');
    expect(summary.PROCESSED).to.be.a('number');
    expect(summary.ERROR).to.be.a('number');
    expect(summary.CANCELED).to.be.a('number');
    expect(summary.total).to.be.a('number');
  });
  
  test("Total equals sum of all statuses", function() {
    const summary = res.getBody();
    const sum = summary.PENDING + summary.PROCESSING + summary.PROCESSED + summary.ERROR + summary.CANCELED;
    expect(summary.total).to.equal(sum);
  });
  
  test("All counts are non-negative", function() {
    const summary = res.getBody();
    expect(summary.PENDING).to.be.at.least(0);
    expect(summary.PROCESSING).to.be.at.least(0);
    expect(summary.PROCESSED).to.be.at.least(0);
    expect(summary.ERROR).to.be.at.least(0);
    expect(summary.CANCELED).to.be.at.least(0);
    expect(summary.total).to.be.at.least(0);
  });
}
