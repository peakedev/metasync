meta {
  name: List Jobs
  type: http
  seq: 3
}

get {
  url: {{baseUrl}}/jobs
  body: none
  auth: none
}

headers {
  Content-Type: application/json
  client_id: {{clientId}}
  client_api_key: {{clientApiKey}}
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response is an array", function() {
    expect(res.getBody()).to.be.an('array');
  });
  
  test("Response contains jobs", function() {
    expect(res.getBody().length).to.be.greaterThanOrEqual(0);
  });
  
  test("Each job has required fields", function() {
    const jobs = res.getBody();
    if (jobs.length > 0) {
      const job = jobs[0];
      expect(job).to.have.property('jobId');
      expect(job).to.have.property('clientId');
      expect(job).to.have.property('status');
      expect(job).to.have.property('operation');
      expect(job).to.have.property('prompts');
      expect(job).to.have.property('model');
      expect(job).to.have.property('temperature');
      expect(job).to.have.property('priority');
      expect(job).to.have.property('requestData');
      expect(job).to.have.property('_metadata');
      expect(job._metadata).to.have.property('createdAt');
      bru.setVar("firstJobId",job.jobId)
    }
  });
  
  test("Client only sees their own jobs", function() {
    const jobs = res.getBody();
    jobs.forEach(job => {
      const expectedClientId = bru.interpolate('{{clientId}}');
      expect(job.clientId).to.deep.equal(expectedClientId);
    });
  });
}
