meta {
  name: Error Create Job Without Data
  type: http
  seq: 21
}

post {
  url: {{baseUrl}}/jobs
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  client_id: {{clientId}}
  client_api_key: {{clientApiKey}}
}

body:json {
  {
    "operation": "process",
    "prompts": ["{{promptId1}}"],
    "model": "{{model}}",
    "temperature": 0.7,
    "priority": 100
  }
}

tests {
  test("Status code is 422", function() {
    expect(res.getStatus()).to.equal(422);
  });
  
  test("Error indicates requestData field is required", function() {
    const body = res.getBody();
    expect(body.detail).to.be.an('array');
    const detailStr = JSON.stringify(body.detail);
    expect(detailStr.toLowerCase()).to.include('requestdata');
  });
}
