meta {
  name: 01-Create-Run
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/runs
  body: json
  auth: none
}

headers {
  client_id: {{clientId}}
  client_api_key: {{clientApiKey}}
}

body:json {
  {
    "initialWorkingPromptIds": ["{{workingPromptId}}"],
    "evalPromptId": "{{evalPromptId}}",
    "evalModel": "{{evalModel}}",
    "metaPromptId": "{{metaPromptId}}",
    "metaModel": "{{metaModel}}",
    "workingModels": ["{{workingModel1}}", "{{workingModel2}}"],
    "maxIterations": 3,
    "temperature": 0.7,
    "priority": 100,
    "requestData": {
      "text": "Bonjour mon ami"
    }
  }
}

assert {
  res.status: eq 201
  res.body.status: eq RUNNING
  res.body.runId: isDefined
}

script:post-response {
  if (res.status === 201) {
    bru.setVar("runId", res.body.runId);
  }
}
