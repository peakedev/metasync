meta {
  name: Create Worker
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/workers
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  client_id: {{clientId}}
  client_api_key: {{clientApiKey}}
}

body:json {
  {
    "workerId": "test-worker-{{$timestamp}}",
    "config": {
      "pollInterval": 10,
      "maxItemsPerBatch": 1,
      "modelFilter": "{{model}}",
      "operationFilter": "process",
      "clientReferenceFilters": {
        "ref": "test-ref-123"
      }
    }
  }
}

tests {
  test("Status code is 201", function() {
    expect(res.getStatus()).to.equal(201);
  });
  
  test("Response is an object", function() {
    expect(res.getBody()).to.be.an('object');
  });
  
  test("Created worker has correct properties", function() {
    const worker = res.getBody();
    expect(worker).to.have.property('workerId');
    expect(worker).to.have.property('workerId');
    expect(worker).to.have.property('clientId');
    expect(worker).to.have.property('status');
    expect(worker.status).to.equal('stopped');
    expect(worker).to.have.property('config');
    expect(worker.config.pollInterval).to.equal(10);
    expect(worker.config.maxItemsPerBatch).to.equal(1);
    expect(worker.config.modelFilter).to.equal(bru.getEnvVar("model"));
    expect(worker.config.operationFilter).to.equal('process');
    expect(worker.config.clientReferenceFilters).to.be.an('object');
    expect(worker.config.clientReferenceFilters.ref).to.equal('test-ref-123');
    bru.setVar("createdWorkerId", worker.workerId);
    bru.setVar("createdWorkerIdentifier", worker.workerId);
  });
  
  test("Worker has _metadata with createdAt timestamp", function() {
    const worker = res.getBody();
    expect(worker).to.have.property('_metadata');
    expect(worker._metadata).to.have.property('createdAt');
  });
}
