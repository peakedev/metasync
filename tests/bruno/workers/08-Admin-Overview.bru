meta {
  name: Admin Overview
  type: http
  seq: 8
}

get {
  url: {{baseUrl}}/workers/admin/overview
  body: none
  auth: none
}

headers {
  admin_api_key: {{adminApiKey}}
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response is an object", function() {
    expect(res.getBody()).to.be.an('object');
  });
  
  test("Overview has statistics", function() {
    const overview = res.getBody();
    expect(overview).to.have.property('total_workers');
    expect(overview).to.have.property('running_workers');
    expect(overview).to.have.property('stopped_workers');
    expect(overview).to.have.property('error_workers');
    expect(overview).to.have.property('workers_by_client');
    expect(overview).to.have.property('workers');
    expect(overview.workers).to.be.an('array');
    expect(overview.workers_by_client).to.be.an('object');
  });
  
  test("Statistics are consistent", function() {
    const overview = res.getBody();
    const calculatedTotal = overview.running_workers + overview.stopped_workers + overview.error_workers;
    expect(overview.total_workers).to.equal(calculatedTotal);
  });
}



